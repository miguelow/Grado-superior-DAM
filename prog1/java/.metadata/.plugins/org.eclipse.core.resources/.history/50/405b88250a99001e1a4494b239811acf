package ejecutables;

public class PrimerAlgortimo {
	public static void main (String[] args) {
		
		/*
		* Declarar variables
		*/
		
		//Usamos enteros mientras no salgamos de 2GB
		int numero1 = 0, numero2 = 180, numero3 = 1800;
		
		//Double para todo aquello que sean decimales
		double real1 = 12.9, real2 = 1.8e12; //1.8 por 10 elevado a 12
		
		//En el momento que float recibe decimales le tenemos que hacer un  casting
		//Por tanto usamos Double para todo decimal
	}
}
