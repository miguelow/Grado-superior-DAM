package ejercicios;

/*
 * Vamos a procesar los numeros del 1 al 15
 * vamos a sumar los pares
 */

public class Ejercicio04FroNumeros {

	public static void main (String[] args) {
		int sumaPares = 0;
		
		for(int i=0; i<=15; i++) {
			if(i%2 == 0) {
				sumaPares += i;
			}
		}
		System.out.println("La suma de pares hasta 15 : " + sumaPares);
	}
}
